# -*- encoding:  utf-8 -*-

require 'rubygems'
require 'pp'
require 'irb/completion'

alias q exit

# History configuration
IRB.conf[:SAVE_HISTORY] = 100
IRB.conf[:HISTORY_FILE] = "#{ENV['HOME']}/.irb_history"

IRB.conf.merge!(PROMPT_MODE: :SIMPLE, AUTO_INDENT: true)

begin
  require "amazing_print"
  AmazingPrint.irb!
rescue LoadError
end
