# vim: ft=zsh

# asdf
alias a="asdf"

# bundler
alias b="bundle"
alias be="bundle exec"
alias ber="bundle exec rake"
alias beg="bundle exec guard"

# make cat an alias to bat
alias cat="bat --paging=never"

# cd
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias lcd="dirs -v"

# copy
alias cp="cp -v"

# docker
alias dcu="docker-compose up -d"
alias dcd="docker-compose down"
alias dcr="dcd && dcu"

# git
alias g=git

# grep
alias grep="grep --color=auto -i"

# here
alias here="localhost"

# hub
alias h=hub

# iex
alias iex="iex --erl \"-kernel shell_history enabled\""
alias e=iex

# ls
alias ls='eza --icons=auto'
#alias ls="ls -G"
alias l="ls"
alias ll="ls -l"
alias la="ls -a"
alias lla="ls -la"
alias lt="ls --tree"

# move
alias mv="mv -v"

# make
alias m="make"

# prj
alias gp="cd ~/prj"
alias gc="cd ~/prj/current"

# rails
alias r=rails

# rake
alias rk="rake"
alias rkt="RAILS_ENV=test rake"
alias rks="rake spec"

# rspec
alias rd="rspec --format d"

# say in german
alias sig="say -v 'Anna' "

# tmux
alias t=tmux

# vim | nvim
alias vim=nvim
alias vi=vim
alias v=vim
alias n=nvim
