[user]
  name = Joao Vortmann
  email = jvortmann@gmail.com

[color]
  status = auto
  branch = auto
  log = auto
  commit = auto
  diff = auto
  interactive = auto
  ui = true
  pager = true

[color "branch"]
  current = yellow
  local = green
  remote = cyan

[color "diff"]
  meta = yellow 
  frag = cyan 
  old = red
  new = green 

[color "status"]
  added = green
  changed = yellow
  untracked = blue

[core]
  excludesfile = ~/.gitignore
  pager = less -FRSX
  whitespace=fix,-indent-with-non-tab,trailing-space,space-before-tab,cr-at-eol

[diff]
  ignoreSubmodules = dirty

[alias]
  aa = add --all
  amend = commit --amend
  l = log
  lg = log --graph --pretty=format:'%C(yellow)%h %Cblue%aN %Cgreen%ar %Creset%s'
  ls = log --stat
  last = log -1 HEAD
  w = log --name-status #short whatchanged
  s = show
  d = diff
  ds = diff --staged
  st = status
  ss = status -s
  ci = commit
  co = checkout
  cf = "!git ss | grep UU --color"
  ccf = "!git ss | grep UU --color | wc -l"
  br = branch
  p = push
  r = remote
  unstage = reset HEAD --
